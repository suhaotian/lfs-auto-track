{
  "name": "lfs-auto-track",
  "version": "1.0.3",
  "description": "git lfs auto track module",
  "repository": "suhaotian/lfs-auto-track",
  "bugs": "https://github.com/suhaotian/lfs-auto-track/issues",
  "homepage": "https://github.com/suhaotian/lfs-auto-track",
  "main": "lib/index.js",
  "bin": {
    "auto-track-lfs": "bin/index.js"
  },
  "scripts": {
    "build": "rm -rf lib && tsc --project tsconfig.json",
    "test": "pnpm build && node --test",
    "prepare": "is-ci || pnpm build && husky",
    "start-publish": "pnpm test && npm publish --registry=https://registry.npmjs.org"
  },
  "dependencies": {
    "mime": "^3"
  },
  "devDependencies": {
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "is-ci": "^3.0.1",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.13",
    "eslint-config-universe": "^12.0.0",
    "@tsconfig/recommended": "^1.0.3",
    "@types/mime": "^3.0.4"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSameLine": true
  },
  "eslintConfig": {
    "extends": "eslint-config-universe",
    "ignorePatterns": [
      "node_modules"
    ]
  },
  "lint-staged": {
    "*": [
      "node bin/index.js 'jpg,jpeg,png,gif:100kb;*:1024kb'"
    ],
    "*.{ts,tsx,mts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,css,js,mjs}": [
      "prettier --write"
    ]
  },
  "files": [
    "bin",
    "lib",
    "!lib/tests"
  ],
  "keywords": [
    "lfs",
    "git lfs",
    "auto track",
    "pre-commit"
  ],
  "author": "suhaotian",
  "license": "MIT"
}
